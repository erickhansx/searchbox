<% if current_user && request.path != articles_path %>
<nav class="logged">
  <%= button_to "Sign out", destroy_user_session_path, class:"btn-submit", method: :delete %>  
  <%= link_to "Navigate To Articles", articles_path, :class => "articles-link"%>
</nav>
<% elsif current_user && request.path === articles_path %>
<nav class="logged">
  <%= button_to "Sign out", destroy_user_session_path, class:"btn-submit", method: :delete %>  
</nav>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class:"btn-submit" %>
  <%= link_to "Sign in", new_user_session_path, class:"btn-submit"%>
<% end %>

